    "High": {
      "RotationDays": 60,
      "WarningDays": 14,
      "RequireApproval": true,
      "AutoRotate": false
    },
    "Medium": {
      "RotationDays": 90,
      "WarningDays": 21,
      "RequireApproval": false,
      "AutoRotate": false
    },
    "Low": {
      "RotationDays": 180,
      "WarningDays": 30,
      "RequireApproval": false,
      "AutoRotate": false
    }
  },
  "ServiceCategories": {
    "AzureKeyVault": "Critical",
    "ApplicationSecrets": "High",
    "ServicePrincipals": "High",
